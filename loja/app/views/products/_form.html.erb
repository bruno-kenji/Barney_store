<%= form_for(@product) do |f| %>
	
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</div>
	<div class="field"><br>
		<%= f.label :description %><br>
		<%= f.text_area :description, rows: 6 %><br>
	</div>
	<div class="field"><br>
		<%= f.label :image_url %><br>
		<%= f.text_field :image_url %><br>
	</div>
	<div class="field"><br>
		<%= f.label :price %><br>
		<%= f.text_field :price %><br>
	</div>
	<div class="actions"><br>
		<%= f.submit %>
	</div>
	<% end %>