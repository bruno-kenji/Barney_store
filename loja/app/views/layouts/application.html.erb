		<div id ="columns">
			<div class="row, clearfix">
				<div class="col-sm-3">
					<ul>
						<li class="clearfix"><%= link_to("Home", root_path) %></li>
						<li class="clearfix"><%= link_to("Login", root_path) %></li>
					</ul>
				</div>
				<div class="col-sm-9">
					<%= yield %>
				</div>
			</div>
		</div>
		<footer>
