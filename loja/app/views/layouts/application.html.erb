<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html ng-app='IlsApp'>
  <head>
    <title><%= @page_title || "Barney Shop" %></title>
    <%= stylesheet_link_tag("application", :media => "all") %>
    <%= javascript_include_tag("application") %>
    <%= csrf_meta_tags %>
  </head>

	<body class="<%= controller.controller_name %>">
		<div class="banner">
			<img src="http://i.imgur.com/1ikiqUj.jpg?1"/>
		</div>

		<div class ="nav">
			<div class="row, clearfix">
				<div class="col-sm-3">
					<ul>
						<li class="clearfix"><%= link_to("Home", root_path) %></li>
						<li class="clearfix"><%= link_to("Login", login_url) %></li>
					</ul>
					<div id="js-menu">
						<h2>Operator Menu</h2>
					</div>
					<div id="js-menu_expanded">
						<ul>
							<li class="clearfix"><%= link_to("Products", products_path) %></li>
							<li class="clearfix"><%= link_to("Categories", categories_path) %></li>
							<li class="clearfix"><%= link_to("Sectors", sectors_path) %></li>
							<li class="clearfix"><%= link_to("Operators", operators_path) %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div id="js-categories">
			<h2>Categories</h2>
		</div>
		<div id="js-categories_expanded">
			<ul>
				<li>Category</li>
				<li>Category</li>
				<li>Category</li>
			</ul>
		</div>
		<div class="container">
			<div class="row, clearfix">
				<div class="col-sm-9">
					<%= yield %>
				</div>
			</div>
		</div>
	
		<footer>
			<p>Copyright Â© 2015 BarneyShop All right reserved</p>
		</footer>
  	</div>
  </body>
</html>