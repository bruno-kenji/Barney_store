<%= form_for(@sector) do |f| %>

	<% if @sector.errors.any? %>
    <div class="error">
      <h2><%= pluralize(@sector.errors.count, "error") %> prohibited this sector from being saved:</h2>

      <ul>
      <% @sector.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
  <div class="checkbox"><br>
    <!-- <%= f.collection_check_boxes :operator_ids, Operator.all, :id, :name %> -->
    <% for operator in Operator.find(:all) %>
      <%= check_box_tag "sector[operator_ids][]", operator.id, @sector.operators.include?(operator) %>
      <%= operator.name %>
    <% end %>
  </div>

	<div class="actions">
		<%= f.submit %>
	</div>
  
<% end %>