<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<div id="show">
	<p>
		<strong>ID:</strong>
		<%= @sector.id %>
	</p>

	<p>
		<strong>Title:</strong>
		<%= @sector.title.titleize %>
	</p>

	<p>
		<strong>Operators:</strong>
		<% if @sector.operators %>
			<% @sector.operators.each do |operator| %>
				<span class='list_actions'><%= link_to operator.name.titleize, operator %></span>,&nbsp;
			<% end %>
		<% end %>
	</p>

	<p>
		<strong>Created at:</strong>
		<%= @sector.created_at %>
	</p>

	<p>
		<strong>Updated at:</strong>
		<%= @sector.updated_at %>
	</p>

	<div class="redirect_button"><br>
		<%= link_to 'Edit', edit_sector_path(@sector) %> |
		<%= link_to 'Back', sectors_path %>
	</div>
</div>