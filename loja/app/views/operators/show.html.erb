<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div id="show">
	<p>
		<strong>ID:</strong>
		<%= @operator.id %>
	</p>

	<p>
	  <strong>Name:</strong>
	  <%= @operator.name.titleize %>
	</p>

	<p>
	  <strong>Email:</strong>
	  <%= @operator.email %>
	</p>

	<p>
		<strong>Sector:</strong>
		<% if @operator.sector %>
		<span class='list_actions'><%= link_to @operator.sector.title.titleize, @operator.sector %></span>&nbsp;
		<% end %>
	</p>

	<p>
		<strong>Created at:</strong>
		<%= @operator.created_at %>
	</p>

	<p>
		<strong>Updated at:</strong>
		<%= @operator.updated_at %>
	</p>


	<div class="redirect_button"><br>
	  <%= link_to 'Edit', edit_operator_path(@operator) %> |
	  <%= link_to 'Back', operators_path %>
	</div>
</div>