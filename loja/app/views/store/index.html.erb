<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1 class="centered_item">Listing Products</h1>

<table>
  <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="list_description">
        <dl>
          <dt><strong><%= product.title.titleize %></strong></dt>
          <dt><%= number_to_currency(product.price) %></dt><br/><br/>
          <span class="list_actions"><%= link_to 'Details', product %></span>
        </dl>
      </td>
    </tr>
  <% end %>
</table>